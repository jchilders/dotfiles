{
    "name": "jc_dotfiles",
    "image": "jc_dotfiles:latest",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscodevim.vim",
                "ms-vscode.cpptools",
                "eamodio.gitlens"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "username": "dot"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/dot/.ssh,type=bind,consistency=cached"
    ],
    "remoteUser": "dot"
}
